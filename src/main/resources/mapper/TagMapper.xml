<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbx.cloudpicbackend.mapper.TagMapper">
    <select id="selectTagsByPictureId" resultType="com.pbx.cloudpicbackend.model.entity.Tag">
        SELECT t.*
        FROM tag t
                 JOIN picture_tag pt ON t.id = pt.tagid
        WHERE pt.pictureId = #{pictureId}
    </select>
</mapper>